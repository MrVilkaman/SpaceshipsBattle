<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:id="@+id/item_level_bk"
                android:background="@color/item_level_bk_color"
                android:layout_width = "200dp"
                android:layout_margin="5dp"
                android:layout_height = "300dp">

    <LinearLayout android:layout_width = "wrap_content"
                  android:orientation="vertical"
                  android:layout_centerVertical = "true"
                  android:layout_centerHorizontal = "true"
                  android:layout_height = "wrap_content"
                  android:id = "@+id/linearLayout">


    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "?android:attr/textAppearanceLarge"
            android:text = "@string/item_level_title_template"
            android:id = "@+id/item_level_title"
             />
    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:text = "Скоро будет)"
            android:id = "@+id/textView2" />
    </LinearLayout>

    <Button android:layout_width = "150dp"
            android:layout_height = "wrap_content"
            android:text="@string/item_level_start"
            android:id="@+id/item_level_start"
            android:layout_alignParentBottom = "true"
            android:layout_centerHorizontal = "true" />
</RelativeLayout>